{
  "workflows": [
    {
      "name": "ucsc_batch_deposit",
      "label": "Batch deposit workflow",
      "description": "A workflow for depositing, reviewing, altering, approving, and publishing batches of digital media at once. Appropriate for example for boxes of pictures.",
      "actions": [

        {"name": "create",
         "from_states": [],
         "transition_to": "needs_review",
         "notifications": [{"notification_type": "email",
             "name": "Hyrax::Workflow::PendingReviewNotification",
             "to": ["reviewing"]}],
         "methods": ["Hyrax::Workflow::DeactivateObject"]}, 

        {"name": "request_changes",
         "from_states": [{"names": ["complete", "pending_review"], "roles": ["reviewing"]}],
         "transition_to": "changes_required",
         "notifications": [{"notification_type": "email",
             "name": "Hyrax::Workflow::ChangesRequiredNotification",
             "to": ["editing"]}],
         "methods": ["Hyrax::Workflow::DeactivateObject"]}, 

        {"name": "approve",
         "from_states": [{"names": ["pending_review", "under_review"], "roles": ["approving"]}],
         "transition_to": "complete",
         "notifications": [],
         "methods": ["Hyrax::Workflow::ActivateObject"]}, 

        {"name": "request_review",
         "from_states": [{"names": ["changes_underway","changes_required","under_review"], "roles": ["editing"]}],
         "transition_to": "needs_review",
         "notifications": [{"notification_type": "email",
             "name": "Ucsc::Workflow::NeedsReviewNotification",
             "to": ["reviewing"]}]}, 

        {"name": "claim_for_review",
         "from_states": [{"names": ["needs_review"], "roles": ["reviewing"]}],
         "transition_to": "under_review",
         "notifications": [],
         "methods": ["Ucsc::Workflow::ClaimObjectReview"]}, 

        {"name": "claim_for_edits",
         "from_states": [{"names": ["changes_required"], "roles": ["editing"]}],
         "transition_to": "changes_underway",
         "notifications": [],
         "methods": ["Ucsc::Workflow::ClaimObjectEdit"]}

      ]
    }
  ]
}
