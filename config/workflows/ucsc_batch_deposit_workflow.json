{
    "workflows": [
        {
            "name": "ucsc_batch_deposit",
            "label": "Batch deposit workflow",
            "description": "A workflow for depositing, reviewing, altering, approving, and publishing batches of digital media at once. Appropriate for example for boxes of pictures.",
            "actions": [
                {
                    "name": "create",
                    "from_states": [],
                    "transition_to": "pending_review",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::PendingReviewNotification",
                            "to": ["editing"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::DeactivateObject"
                    ]
                }, {
                    "name": "request_changes",
                    "from_states": [{"names": ["complete", "pending_review"], "roles": ["approving"]}],
                    "transition_to": "changes_required",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::ChangesRequiredNotification",
                            "to": ["editing"]
                        }
                    ],
                    "methods": [
                        "Hyrax::Workflow::DeactivateObject"
                    ]
                }, {
                    "name": "approve",
                    "from_states": [{"names": ["pending_review"], "roles": ["approving"]}],
                    "transition_to": "complete",
                    "notifications": [],
                    "methods": [
                        "Hyrax::Workflow::ActivateObject"
                    ]
                }, {
                    "name": "request_review",
                    "from_states": [{"names": ["pending_offline_edits","changes_required"], "roles": ["editing"]}],
                    "transition_to": "pending_review",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::PendingReviewNotification",
                            "to": ["approving"]
                        }
                    ]
                }, {
                    "name": "edit_offline",
                    "from_states": [{"names": ["changes_required"], "roles": ["editing"]}],
                    "transition_to": "pending_offline_edits",
                    "notifications": [
                        {
                            "notification_type": "email",
                            "name": "Hyrax::Workflow::ChangesRequiredNotification",
                            "to": ["editing"]
                        }
                    ]
                }
            ]
        }
    ]
}
