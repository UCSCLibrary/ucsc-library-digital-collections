@import url('https://fonts.googleapis.com/css?family=Roboto&display=swap');
$font-1: 'Source Sans Pro', sans-serif;
$font-2: 'Roboto', sans-serif;

$ucsc-blue: #00457c;
$ucsc-lightblue: #02779e;
$ucsc-gold: #ffd700;
$header-height: 40px;
$screen-xs: 480px;
$screen-sm: 768px;
$screen-md: 992px;
$screen-lg: 1200px;

/* Helper classes */
.flex {
    display: flex;
}
.hidden {
    display: none;
}

body.dashboard div#bulk-review-buttons {
    min-height: 50px;
    div#selections {
        float:left;
    }
    div#actions {
        float:right;
    }
}

body {
    background-color: white;
    font-family: $font-1;

    a:hover {
        color: lighten($ucsc-blue,40%)
    }

    div.autosuggest ul {
        padding-left:0px;
    }

    .input-group {
        select.vocab_select.form-control{
            margin-right: 5px;
            display: none;
            width: 23%;
            display: table-cell;
        }
        div.select2-container.autosuggest{
            width:75%
        }
        input.ui-autocomplete-input.form-control { 
            width: 100%;
        }
    }

    div#ui-datepicker-div {
        z-index: 2 !important;
    }

    div#metacollection-banner {
        font-size: 2em;
        @media (min-width: 768px) {
            position: relative;
            .caption {
                position: absolute;
                bottom: 20%;
                left: 2%;
                background: white;
                padding-left: 15px;
                padding-right: 15px;
            }
        }
    }
    
    .metacollection-description {
        margin-top: 10px;
        font-weight: bold;
        font-size: 1.2em;
        max-width: 1300px;
        div.description-toggle {
            cursor: pointer;
            display: inline;
            color: #2e74b2;
        }
    }

    #search-within-collection {
        margin-top: 20px;
        max-width: 500px;
        input {
            border-radius: 0px;
            border: 1px solid black;
        }
        button.btn-primary {
            background-color: black;
            border-radius: 0px;
        }
    }

    #subcollections {
        margin-top: 45px;
        .subcollection {
            padding-top: 20px;
            margin-bottom: 20px;
            img {
                display: inline-block;
                vertical-align:top;
                max-width: 38%;
            }
            .subcollection-info {
                max-width: 48%;
                display: inline-block;
                margin-left: 10px;
                max-height: 150px;
                .subcollection-title {
                    font-size: 1.2em;
                    @media (min-width: $screen-md) {
                        line-height: 1.4em;
                    }
                }
            }
        }
    }

    #content-wrapper.container-fluid {
        margin-right: 15px;
        margin-left: 15px;
    }
    
    .mejs__playlist-selected, .mejs-playlist-selected {
        background-color: #FECB45;
    }

    .mejs__playlist-selector-list-item, .mejs-playlist-selector-list-item {
        background-color: #ddd;
    }

    .mejs__playlist-selector-list, .mejs-playlist-selector-list {
        color: black;
        border: 1px solid #7A7A7A;
    }

    li.featured-collection img {
        width: 250px;
    }

    img.primary-media {
        max-width: 100%
    }

    img.primary-media.raw-image {
        max-height: 600px;
    }

    label#primary-image-label {
        display: block;
        margin: 2px 0 10px 10px;
        font-size: 0.9em;
        font-style: italic;
    }
    
    div.form-group.textbox_autosuggest {

        ul.listing {
            padding-left: 5px;
            list-style: none;

            li.field-wrapper {
                position:relative;
                margin-top:20px;
                width: 100%;

                label {
                    font-weight: 400;
                }

                div.select2-container.controlled_vocabulary {
                    max-width: 65%
                }

                div.auth-select-div {
                    max-width:25%;
                    text-align:center;
                    padding-top:5px;
                    padding-right: 10px;
                    line-height: 0;
                    float: left;
                }
                input.textbox_autosuggest[data-persisted=false] {
                    width: 60%;
                    
                }

                input.textbox_autosuggest.selected {
                    width: 85%;
                    
                }
                input.textbox_autosuggest[data-persisted=true] {
                    width: 85%;
                    display: inline;
                }

                button.remove {
                    //                    position: absolute;
                    //                   right: 0;
                    //                   top: 0.2em;
                }
                .glyphicon {
                    top: 0.5em;
                    left: 7px;
                }
            }
        }
    }  
    div.form-group.controlled_dropdown {

        ul.listing {
            padding-left: 5px;
            list-style: none;

            li.field-wrapper {
                position:relative;
                margin-top:20px;

                label {
                    font-weight: 400;
                }
                select {
                    width: auto;
                }
            }
        }
    }
    
    li.document {
        h2 {
            clear:left;
        }
        div.list-thumbnail {
            margin-bottom: 20px;
        }
        .metadata {
            max-height: 185px;
            overflow-y: auto;
            overflow-x: hidden;
        }
    }
    
    div#extended-terms {
        margin-top: 30px;
    }
}

/* Header */
#masthead {
    color: #fff;
    background-color: $ucsc-blue;
    border-bottom: none;

    #ucsc-logo {
        content: image-url('ucsc-logo-white.png');
        padding: 0;
    }

    #university-library {
        display: inline-block;
        padding: 10px 0 0 20px;
        font-family: $font-2;
        font-size: 16px;
        font-weight: bold;
        text-transform: uppercase;
        color: #fff;
        &:hover {
            text-decoration: none;
        }
        @media (min-width: 420px) { font-size: 20px; }
        @media (min-width: $screen-xs) {
            font-size: 26px;
            padding-top: 6px;
        }
        @media (min-width: $screen-sm) { font-size: 30px; }
    }

    /* Main menu */
    #top-navbar-collapse {
        background-color: $ucsc-blue;
        border-top: none;
        font-size: 16px;
        font-weight: bold;
        li {
            text-align: right;
        }
        @media (min-width: $screen-sm) {
            li {
                float: right;
            }
            li a::after {
                content: "â€¢ ";
                color: #f2cc38;
                position: relative;
                left: 16px;
            }
            li.first a::after {
                content: '';
            }
        }
    }

    /* Logged in user menu */
    .navbar-user {
        background-color: black;
    }
    #user_utility_links {
        float: right;
        margin-top: 0;
        margin-bottom: 0;
        > li { float: left !important; }
        a { padding: 10px; }
        .dropdown-menu {
            position: absolute;
            background-color: #fff;
            border: 1px solid #ccc;
            border: 1px solid rgba(0, 0, 0, 0.15);
            border-radius: 4px;
            -webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.175);
            a {
                color: #333333;
                &:hover { background-color: #f5f5f5; }
            }
            .divider { color: #e5e5e5; }
        }
    }
}
/* Site title and search */
#digital-collections {
    background-color: $ucsc-lightblue;
    .control-label {
        display: none;
    }
    span a {
        font-family: $font-2 ;
        font-size: 32px;
        font-weight: bold;
        text-transform: uppercase;
        color: #fff;
        &:hover {
           text-decoration: none;
        }
    }
    .navbar-toggle {
        margin: 0;
        padding: 14px 0;
        border: none;
        color: #fff;
        font-weight: bold;
        &:hover {
            cursor: pointer;
            background-color: inherit;
            color: #ccc;
        }
    }
    .subtitle {
        display: none;
    }
    #search-form-header {
        border-top: none;
        position: relative;
        right: 82vw;
        width: 94vw;
    }
    @media (min-width: $screen-sm) {
        span a { font-size: 42px; }
        .searchbar-right {
            position: relative;
            top: 35px;
            right: 10px;
        }
        #search-form-header {
            position: static;
            width: auto;
        }
    }
    @media (min-width: 1155px) {
        .searchbar-right { top: 5px; }
    }
    @media (max-width: 533px) {
        .navbar-toggle { font-size: 12px; }
    }
    @media (max-width: 483px) {
        .navbar-toggle { font-size: 10px; }
        #search-form-header { margin-top: 95px; }
    }
}

/* Site title and search - homepage */
.front {
    #digital-collections {
        border: none;
        text-align: center;
        margin-bottom: 0;
        .title {
            width: 100%;
            padding: 20px;
        }
        .subtitle {
            display: block;
            margin: 0 auto;
            float: none;
            p {
                color: #fff;
                font-size: 16px;
                font-weight: bold;
            }
        }
        .searchbar-right {
            width: 83.333333%;
            max-width: 500px;
            margin: 20px auto;
            right: 0;
            float: none;
            top: 0;
            .navbar-toggle { display: none; }
        }
        #search-form-header {
            display: block;
            position: static;
            width: auto;
            margin-top: 0;
        }
    }
    @media (min-width: $screen-xs) {
        #digital-collections {
            background: linear-gradient(rgba(2,90,158,0.6) 50%, rgba(255,255,255,1) 100%), url(<%= asset_path('the-wave.jpg') %>);
            background-size: cover, cover;
            height: 250px;
            .subtitle { width: 70%; }
        }
    }
    @media (min-width: $screen-sm) {
        #digital-collections {
            height: 325px;
            .subtitle { width: 50%; }
            .searchbar-right { margin: 30px auto; }
        }
    }
    @media (min-width: $screen-md) {
        #digital-collections {
            background: linear-gradient(rgba(2,90,158,0.6) 70%, rgba(255,255,255,1) 100%), url(<%= asset_path('the-wave-hi-res.jpg') %>);
            background-size: cover, cover;
            height: 400px;
            .title { padding: 30px; }
            .subtitle { width: 40%; }
            .searchbar-right { margin: 50px auto; }
        }
    }
}

/* Homepage content */
.front #content-wrapper {
    h1 { margin-top: 0; }
    ul.collections {
        list-style: none;
        display: flex;
        flex-flow: row wrap;
        padding-left: 0;
        li { 
            width: 100%;
            margin: 10px; 
        }
        a {
            display: inline-block;
            position: relative;
            width: 100%;
            &:hover span { background-color: rgba(0,0,0,1); }
        }
        img {
            width: 100%;
            object-fit: cover;
        }
        span {
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100%;
            padding: 2px 5px;
            background-color: rgba(0,0,0,0.4);
            color: #fff;
            text-align: center;
            text-transform: uppercase;
            font-weight: bold;
            font-size: 14px;
        }
    }
    button.btn-primary {
        clear: both;
        display: block;
        margin: 0 auto;
        text-transform: uppercase;
    }
    /* This rule is important for the jquery toggle interaction */
    #all-collections { display: flex; }

    @media (min-width: $screen-xs) {
        ul.collections {
            li { width: auto; }
            a, img { 
                width: 40vw;
                height: 150px; 
            }
            span { font-size: 12px; }
        }
    }
    @media (min-width: $screen-sm) {
        ul.collections {
            flex-flow: row no-wrap;
            a, img {
                width: 160px;
                height: 160px;
            }
        }
        button.btn-primary { float: right; }
    }
    @media (min-width: $screen-md) {
        ul.collections {
            a, img {
                width: 210px;
                height: 210px;
            }
        }
    }
    @media (min-width: $screen-lg) {
        ul.collections {
            a, img {
                width: 265px;
                height: 265px;
            }
        }
    }
}

/* Breadcrumbs */
nav.breadcrumb {
    background-color: transparent;
    border: none;
    padding-left: 0;
}

/* Footer */
footer {
    padding: 20px;
    background-color: $ucsc-blue;
    font-family: $font-2;
    color: #fff;
    a {
        color: #fff;
        &:hover,
        &:active,
        &:focus {
            color: #fff;
        }
    }
    ul {
        list-style: none;
        padding-left: 0;
    }
    li {
        padding-bottom: 5px;
    }
    /* Move login link to bottom on mobile */
    @media (max-width: $screen-sm) {
        ul {
            margin-top: 20px;
        }
        .last ul {
            display: flex;
            flex-direction: column;
            flex-wrap: wrap;
            li {
                flex-width: 100%;
                order: 1;
                &:first-child {
                    order: 2;
                    margin-top: 20px;
                }

            }
        }
    }
}
/* Padding at the bottom of the page */
div#content-wrapper {
    padding-bottom: 100px;
}

/* Buttons & UI elements*/
.btn.btn-primary:hover {
    background-color: $ucsc-lightblue;
}

div.uv.viewer iframe {
    // This fixes display problem that occurs when
    // downsizing maximized viewer after clicking 'full screen' then 'esc'
    max-width: 100%;
    max-height: 100%;
}

.related-files td.thumbnail.small-thumb {
    width: 60px;
    margin-bottom:0px;
    padding:0;
}

/* Single work page */
#display-work-img {
    width: 100vw;
    margin-left: calc(50% - 50vw);
    padding: 20px 0;
    text-align: center;
    background-color: #000;
    position: relative;
    .glyph-wrap {
        position: absolute;
        bottom: 30px;
        left: 30px;
    }
    .glyphicon {
        float: left;
        margin-right:20px;
        color: #fff;
        font-size: 200%;
    }
}

/* Works page metadata */
h2.metadata {
    font-size: 16px;
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 25px;
}
table.work.attributes {
    th {
        width: 165px;
        text-align: right;
        color: #838282;
        &:after {
            content: ':';
        }
    }
    th.fix-colon:after {
        content: '';
    }
    ul {
        margin: 5px 0 5px 15px;
    }
}
#show-more-metadata,
#hide-more-metadata {
    display:inline-block;
    margin: 25px 0 0 180px;
    &:hover {
        cursor: pointer;
    }
}

/* Works page About the Collection section */
#collection-metadata {
    margin: 20px 0;
    padding: 5px 15px;
    border-radius: 10px;
    background-color: #f4f4f4;
    h3 {
        font-size: 18px;
        font-weight: bold;
        margin-top: 10px;
    }
    ul.tabular,
    .flex > a {
        padding-left: 50px;
        background: url(<%= asset_path('icon-circle-end.png') %>) -8px -15px no-repeat;
        background-size: 55px 50px;
    }
    .flex > a:first-child {
        padding-left: 0;
        background: none;
    }
    ul.list-unstyled {
        margin-top: 40px;
    }
}

/* Parent object metadata on mobile */
@media all and (max-width: 767px) {
    .item-set .metadata,
    .item-set #mobileCollapse,
    .item-set table.attributes,
    .item-set #collection-metadata,
    .item-set #show-more-metadata { display: none; }
    .item-set .metadata.mobile {
        display: block;
        color: #2e74b2;
        cursor: pointer;
    }
}
@media all and (min-width: 768px) {
    .item-set .metadata.mobile { display: none; }
}

/* Download, Share, and Cite buttons */
#download-share-cite {
    height: 40px;
    margin-top: 30px;
    button {
        float: left;
        margin-right: 30px;
    }
}
.btn-citation span.h1 {
    margin: 0 8px 0 0;
    line-height: 20px;
    position: relative;
    float: left;
    top: 7px;
}

/* Audio Player */
#primary-audio-div {
    width:100vw;
    margin-left:calc(50% - 50vw);
    padding:20px 0;
    text-align:center;
    background-color:#f5f5f5;
    position:relative;
    
    #mep-container, #off-campus-access-notice {
        width: 450px;
        margin-left: auto;
        display: inline-block;
        margin-right: 2%;
        vertical-align: top;
    }

    .mejs__container.hls_media {min-width: auto !important}

    #track-list{ 
        max-width: 600px;
        width: 60%;
        display: inline-block;
        margin-left: 3%;
        position: relative;
        text-align: left;        
        p, .active {
            font-weight: 700;
        }
        .av_playlist_link {
            margin-left: 25px;
            line-height: 2em;
        }
        .glyphicon {
            float:left;
            top: 5px;
        }
        
    }
}

/* Modals */
.modal .modal-body {
    .modal-title {
        margin-bottom: 20px;
        font-size: 16px;
        font-weight: bold;
        text-transform: uppercase;
    }
    h5, .h5 {
        font-weight: bold;
    }
    .close {
        padding: 2px 3px 3px 3px;
        border: solid 1px #fff;
        border-radius: 50%;
        color: #5f98f7;
        background-color: #f3f9ff;
        opacity: 1;
        &:hover {
            color: #f3f9ff;
            background-color: #5f98f7;
        }
    }
}
#downloadWork {
    ul {
        list-style: none;
        padding: 0;
    }
    li {
        margin-bottom: 10px;
    }
}
#shareWork {
    ul {
        list-style: none;
        padding: 0;
    }
    li {
        display: inline-block;
        margin: 0 15px;
    }
    .permalink {
        margin: 25px 0;
    }
    .permalink-heading {
        font-weight: bold;
    }
    #embedWidth, #embedHeight {
        width: 55px;
    }
}
#emailWork {
    #work-title { 
        margin-bottom: 7px; 
    }
}
#citeWork {
    .citation {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 20px;
        > span {
            flex: 2 1 auto;
        }
    }
}

/* Collection Landing page & Search Results page */
header#collection-description {
    position: relative;
    display: block;
    margin-bottom: 30px;
    padding: 1em 2em;
    background-color: #f7f7f7;
    h1 {
        margin: 0 0 20px;
    }
    h5.harmful-language-statement {
        padding-top: 20px
    }
    .collection-image img {
        margin: 0 auto;
    }
    .collection-text {
        margin-bottom: 20px;
        min-height: 250px;
        a {
            position: absolute;
            bottom: 10px;
            right: 15px;
        }
    }
}
h5.harmful-language-statement {
    font-weight: bold;
}
/* Collection A-Z / Browse Collections page */
#all-collections {
    display: flex;
    flex-flow: row wrap;
    margin-bottom: 30px;
    .media { margin-bottom: 30px; }
    .media:first-child {
        margin-top: 15px;
    }
    .media-body { position: relative; }
    p.media-description { margin: 0 0 25px; }
    .media-count {
        position: absolute;
        bottom: -10px;
        font-weight: bold;
    }
    .media-object {
        height: 150px;
        object-fit: cover;
    }
}
@media all and (max-width: 767px) {
    #all-collections .media {
        margin-left: 15px;
        p { display: none; }
        h4 {
            display: table-cell;
            height: 150px;
            vertical-align: middle;
        }
    }

}
img {
  border: 2px solid #C0C0C0;
  padding: 5px;
}
@media all and (min-width: 460px) {
    header#collection-description .collection-image {
        float: left;
        img {
            margin: 0 15px 15px 0;
        }
    }
}
#search-results-wrapper {
    display: flex;
    flex-direction: column;
}
#search-results-content {
    order: 2;
    padding: 0;
}
#search-results-sidebar {
    order: 1;
    padding: 0;
    .facets-heading { display: none; }
}
div#documents.gallery {
    clear: both !important;
    justify-content: left;
    &:before {
        display: none;
    }
    .document {
        border-bottom: none;
        min-width: 174px;
        max-width: 174px;
        -webkit-flex: 1 0 230px;
        padding-left: 8px;
        padding-right: 8px;
    }
    .thumbnail {
        border: none;
        position: relative;
        a > img,
        span.fa {
            background-color: #f7f7f7;
            width: 150px;
            height: 150px;
            font-size: 5em;
        }
        .caption { padding: 0; }
        dl.document-metadata.dl-horizontal.dl-invert,
        .documentHeader .index-document-functions {
            display: none;
        }
        .tooltip {
            margin: 90% 0 0 0;
            padding: 0 20px;
            pointer-events: none;
        }
        h3 .tooltip {
            margin: -10.2% 0 0 0;
            padding: 0 30px;
        }
        .tooltip.in { opacity: 1; }
        .tooltip-inner {
            background-color: #f7f7f7;
            color: #000;
            opacity: 1;
        }
        .tooltip-arrow { display: none; }
        .image-set {
            width: 30px;
            height:30px;
            border-radius: 50%;
            position: absolute;
            right: 15px;
            top: 112px;
            background: #fff url(<%= asset_path('multi-item.png') %>) no-repeat center;
            background-size: 50%;
        }
    }
}

.hyc-bl-title h4,
h4.results-count {
    float: left;
    font-size: 14px;
    font-weight: bold;
}
h4.results-count span {
    font-style: italic;
}

@media (all and min-width: $screen-xs) {
    .hyc-bl-title h4,
    h4.results-count {
        font-size: 18px;
    }
}
@media (all and min-width: $screen-sm) {
    #search-results-wrapper { display: block; }
    #search-results-content,
    #search-results-sidebar {
        padding-left: 15px;
        padding-right: 15px;
    }
}

/* Matching Collections Box */
.matching-collections-wrapper {
    background-color: #F5F5F5;
    padding: 20px;
    margin-bottom: 40px;
    margin-top: 20px;
    border-radius: 4px;
    .matching-collections-count {
        font-weight: bold
    }
    .matching-collection-item {
        background-color: #f1f1f1;
        border-radius: 4px;
    }
    .matching-collections-container {
        min-height: 200px;
    }
    .collection-row {
        margin-top: 22px;
    }

/* Matching Collections Carousel */
    .carousel-control {
        background-image: none;
        width: auto;
        top: 30%;
        .glyphicon {
            color: #777777;
        }
    }
    .carousel-column {
        padding: 10px;
        .carousel-collection img {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border: 1px solid #d6d6d6;
            border-radius: 2px;
            margin-bottom: 10px;
        }
        .collection-title {
            font-size: 11px;
        }
    }
}

@media (max-width: $screen-sm) {
    .collection-row.matching-collections-flex-row .carousel-column:only-child {
        width: 100%;
    }
}

.matching-collections-carousel .carousel-control.left {
    margin-left: -20px;
}

.matching-collections-carousel .carousel-control.right {
    margin-right: -20px;
}

////// Carousel Media Queries //////

@media (max-width: 767px) {
    .matching-collections-carousel .cloneditem-1,
    .matching-collections-carousel .cloneditem-2,
    .matching-collections-carousel .cloneditem-3 {
    display: none;
    }
}

@media only screen and (max-width: 992px) {
    .carousel .item .col-xs-12:nth-last-child(-n+2) {
    display: none;
    }
}

@media all and (min-width: 768px) {
    .matching-collections-carousel .carousel-inner > .active.left,
    .matching-collections-carousel .carousel-inner > .prev {
    left: -50%;
    }
    .matching-collections-carousel .carousel-inner > .active.right,
    .matching-collections-carousel .carousel-inner > .next {
    left: 50%;
    }
    .matching-collections-carousel .carousel-inner > .left,
    .matching-collections-carousel .carousel-inner > .prev.right,
    .matching-collections-carousel .carousel-inner > .active {
    left: 0;
    }
    .matching-collections-carousel .carousel-inner .cloneditem-1 {
    display: block;
    }
}

@media all and (min-width: 768px) and (transform-3d),
all and (min-width: 768px) and (-webkit-transform-3d) {
    .matching-collections-carousel .carousel-inner > .item.active.right,
    .matching-collections-carousel .carousel-inner > .item.next {
    -webkit-transform: translate3d(50%, 0, 0);
    transform: translate3d(50%, 0, 0);
    left: 0;
    }
    .matching-collections-carousel .carousel-inner > .item.active.left,
    .matching-collections-carousel .carousel-inner > .item.prev {
    -webkit-transform: translate3d(-50%, 0, 0);
    transform: translate3d(-50%, 0, 0);
    left: 0;
    }
    .matching-collections-carousel .carousel-inner > .item.left,
    .matching-collections-carousel .carousel-inner > .item.prev.right,
    .matching-collections-carousel .carousel-inner > .item.active {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
    left: 0;
    }
}

@media all and (min-width: 992px) {
    .matching-collections-carousel .carousel-inner > .active.left,
    .matching-collections-carousel .carousel-inner > .prev {
    left: -16.6%;
    }
    .matching-collections-carousel .carousel-inner > .active.right,
    .matching-collections-carousel .carousel-inner > .next {
    left: 16.6%;
    }
    .matching-collections-carousel .carousel-inner > .left,
    .matching-collections-carousel .carousel-inner > .prev.right,
    .matching-collections-carousel .carousel-inner > .active {
    left: 0;
    }
    .matching-collections-carousel .carousel-inner .cloneditem-2,
    .matching-collections-carousel .carousel-inner .cloneditem-3 {
    display: block;
    }
}

@media all and (min-width: 992px) and (transform-3d),
all and (min-width: 992px) and (-webkit-transform-3d) {
    .matching-collections-carousel .carousel-inner > .item.active.right,
    .matching-collections-carousel .carousel-inner > .item.next {
    -webkit-transform: translate3d(16.6%, 0, 0);
    transform: translate3d(16.6%, 0, 0);
    left: 0;
    }
    .matching-collections-carousel .carousel-inner > .item.active.left,
    .matching-collections-carousel .carousel-inner > .item.prev {
    -webkit-transform: translate3d(-16.6%, 0, 0);
    transform: translate3d(-16.6%, 0, 0);
    left: 0;
    }
    .matching-collections-carousel .carousel-inner > .item.left,
    .matching-collections-carousel .carousel-inner > .item.prev.right,
    .matching-collections-carousel .carousel-inner > .item.active {
