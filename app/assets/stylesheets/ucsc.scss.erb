        color: #fff;
    }
}

/* Facets */
#facets {
    .top-panel-heading {
        padding: 0;
        border: none;
    }
    #facet-panel-collapse {
        padding-right: 0;
        .facet-panel-group {
            display: flex;
            flex-direction: column;
        }
        .panel-default > .panel-heading {
            background-color: #fff;
            color: #757575;
            h3 {
                font-size: 1em;
            }
        }
        .panel {
            border-radius: 0;
            margin-top: 20px;
        }
        .panel.blacklight-series_sim { order: 1; }
        .panel.blacklight-subjectplace_sim { order: 2; }
        .panel.blacklight-subjecttopic_sim { order: 3; }
        .panel.blacklight-subjectname_sim { order: 4; }
        .panel.blacklight-creator_sim { order: 5; }
        .panel.blacklight-resourcetype_sim { order: 6; }
        .panel.blacklight-ancestor_collection_titles_ssim { order: 7; }
        /* Swap the glyphicons per style guide */
        .panel-heading.collapse-toggle .panel-title::after {
            content: "\e113";
        }
        .panel-heading.collapse-toggle.collapsed .panel-title::after {
            content: "\e114";
        }
    }
    #facet-panel-collapse.in,
    #facet-panel-collapse.collapsing {
        margin-top: 60px;
    }
}
/* Facets mobile style */
@media (all and min-width: $screen-xs) {
    .panel-default > .panel-heading + .panel-collapse > .panel-body {
        padding: 15px 30px;
    }
}
@media (all and max-width: 767px) {
    #facets {
        .top-panel-heading {
            margin-bottom: 0;
            .facets-toggle {
                position: static;
                float: none;
                margin: 0;
                background-color: #20477d;
                color: #fff;
                border-top-left-radius: 0;
                border-bottom-left-radius: 0;
                border-color: #20477d;
                span.text { margin-right: 8px; }
            }
        }
        .facets-toggle[aria-expanded="true"] {
            border-bottom-right-radius: 0px;
            border-bottom: none;
        }
        #facet-panel-collapse {
            color: #fff;
            background-color: #20477d;
            border-top: none;
            .input-group { margin: 8px; }
            .panel-default > .panel-heading {
                border-radius: 0;
                background-color: #20477d;
                color: #fff;
            }
            .panel.panel-default {
                position: relative;
                border: none;
                box-shadow: none;
                padding: 10px 0;
                margin-top: 0;
                background-color: #20477d;
            }
            .panel.panel-default:after {
                content: "";
                background: gray;
                position: absolute;
                bottom: 0;
                left: 2%;
                height: 1px;
                width: 96%;
            }
            .panel-default > .panel-heading + .panel-collapse > .panel-body {
                border-top: none;
                a { color: #fff; }
            }
            .panel-heading.collapse-toggle .panel-title::after {
                float: none;
                color: #fff;
            }
        }
        #facet-panel-collapse.collapsing,
        #facet-panel-collapse.in {
            margin-top: 0;
            padding: 0;
        }
    }
}

/* Pagination */
.hyc-bl-pager,
div.pagination {
    display: block;
    ul.pagination {
        display: flex;
        justify-content: center;

        .disabled span, li a {
            border: none;
        }

        li span, li a {
            border-radius: 20px !important;
        }
        .active span {
            border-color: #747474;
            background-color: #747474;
        }
    }
}

/* Messages, Alerts, etc */
#off-campus-access-notice {
    background-color: #f9f2ca;
    text-align: center;
    padding: 20px;
    margin: 20px;
    font-weight: bold;
}

/* Turn a blacklight caret into a glyphicon chevron */
span.caret {
    position: relative;
    display: inline-block;
    height: auto;
    width: auto;
    font-family: "Glyphicons Halflings";
    font-style: normal;
    font-weight: 400;
    line-height: 1;
    border: none;
    color: #337ab7 !important;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}
span.caret:before {
    content: "\e114";
}
