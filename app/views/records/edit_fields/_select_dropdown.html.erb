<% options[:as] = :select %>
<% options[:include_blank] = :true %>
<% options[:item_helper] = method(:include_current_value) %>

<% vocab = property['vocabulary'] %>
<% vocab ||= property['vocabularies'].first unless property['vocabularies'].nil? %>
<% vocab = {"auth" => "local", "subauth" => vocab} if vocab.type_of? string %>
<% options[:collection] =  Hyrax::QaSelectService.new(vocab["subauthority"]).select_all_options%>

<% Raise StandardError unless vocab['authority'].downcase == "local" or vocab["authority"].downcase == "ucsc" %>

<%= f.input key, options %>

<% end %>
