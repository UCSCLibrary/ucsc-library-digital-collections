
<% isPlaylist = file_set_ids.count > 1 %>
<% playlistOptions =  ',
                         "showPlaylist": false,
                         "autoClosePlaylist": true,
                         "currentMessage": "now playing: ",
                         "features": ["playpause", 
                                      "current", 
                                      "progress", 
                                      "duration", 
                                      "tracks", 
                                      "volume", 
                                      "fullscreen",
                                      "playlist",
                                      "prevtrack", 
                                      "nexttrack", 
                                      "shuffle", 
                                      "loop"]'%>
<audio controls="controls"
       class="hls_media mejs__player <%= "playlist" if isPlaylist %>"
       preload="auto"
       data-mejsoptions='{"pluginPath": "/mejs/",
                         "audioWidth": "100%"<%= playlistOptions if isPlaylist %>}'>

    <% file_set_ids.each do |file_set_id| %>
        <source src="<%= File.join(request.base_url,"file_set",file_set_id,"hls.m3u8") %>" title="<%= file_set_id[:title]%>" type="application/x-mpegurl"/>
    <%end %>
        Your browser does not support the audio tag.
</audio>
