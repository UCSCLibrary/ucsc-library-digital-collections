
<% isPlaylist = file_set_ids.count > 1 %>
<audio controls="controls"
       class="hls_media <%= isPlaylist ? "playlist" : 'single' %>"
       preload="auto">
    <% file_set_ids.map{|id| SolrDocument.find(id) }.each_with_index do |file_set, i| %>
        <source src="<%= hyrax.download_path(file_set, file: 'mp3') %>" title="<%= "Track #{i + 1}" %>" type="audio/mpeg"/>
    <%end %>
        Your browser does not support the audio tag.
</audio>
