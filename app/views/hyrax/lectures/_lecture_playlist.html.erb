<%#= Custom file %>
<% isPlaylist = file_set_ids.count > 1 %>
<audio controls="controls"
       id="primary-media-player"
       class="hls_media <%= isPlaylist ? "playlist" : 'single' %>"
       preload="auto">
    <% file_set_ids.map{|id| SolrDocument.find(id) }.each_with_index do |file_set, i| %>
        <source src="<%= File.join(request.base_url,"file_set",file_set.id,"hls.m3u8") %>" title="<%= "Track #{i + 1}" %>"  type="application/x-mpegurl"/>
    <%end %>
        Your browser does not support the audio tag.
</audio>
