<% if av_files.any? %>
    <% if av_files.count == 1 %>
        <%= render 'single_player', file_set_id: av_files.first[:id]  %>
    <% else %>
        <%#= render 'playlist', file_set_ids: av_files %>
    <% end %>
    <%= javascript_include_tag "include_player" %>
    <%= stylesheet_link_tag "embed" %>
<% elsif @presenter.image?%>
    <% if (image_presenter = presenter.representative_presenter).present? && current_ability.can?(:read,image_presenter.id) %>
        <% if (defined?(viewer) && viewer.to_s == "true") || params['universal_viewer'] %>
            <%= PulUvRails::UniversalViewer.script_tag %>
            <div class="viewer-wrapper">
                <div class="uv viewer" data-config="/uv_config.json" data-uri="<%= main_app.polymorphic_path [main_app, :manifest, presenter] %>"></div>
            </div>
        <% elsif defined?(viewer) && (viewer == "click")  %>
            <% uv_link = "#{request.path}?universal_viewer=true" %>
            <% uv_link += "&locale=#{params['locale']}" if params['locale'] %>
            <div id="display-work-img">
                <a href="<%= uv_link%>"> 
                    <%= image_tag(@presenter.display_image_url, class: "raw-image primary-media",role: "presentation") %>
                    <label id="primary-image-label" class="sr-only">Click image to load zoomable viewer</label>
                    <div class="glyph-wrap">
                        <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
                        <span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span>
                    </div>
                </a>
            </div>
        <% else %>
            <%= image_tag @presenter.display_image_url, class: "primary-media",role: "presentation"%>
        <% end %>
    <% end %>
<% end %>
