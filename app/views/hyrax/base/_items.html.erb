<% unless presenter.work_presenters.empty? %>
    <h2><%= t('.header') %></h2>
    <% if presenter.member_presenters.present? %>
        <table class="table table-striped related-files">
            <thead>
                <tr>
                    <th><%= t('.thumbnail') %></th>
                    <th><%= t('.title') %></th>
                    <th><%= t('.date_created') %></th>
                    <th><%= can?(:edit, presenter.id) ? t('.actions') : "" %></th>
                </tr>
            </thead>
            <tbody>
                
                <%= render partial: 'member', collection: presenter.work_presenters %>
            </tbody>
        </table>
    <% elsif can? :edit, presenter.id %>
        <div class="alert alert-warning" role="alert"><%= t('.empty', type: presenter.human_readable_type) %></div>
    <% end %>
<% end %>
