<audio controls="controls"
       class="hls_media mejs__player"
       preload="auto"
       data-mejsoptions='{"pluginPath": "/mejs/",
                         "showPlaylist": <%= isPlaylist ? "true" : "false" %>, 
                         "audioWidth": "100%"<%= playlistOptions if isPlaylist %>}'>

    <% i = 1 %>
    <% file_set_ids.each do |file_set_id| %>
        <source src="<%= File.join(request.base_url,"file_set",file_set_id,"hls.m3u8") %>" title="<%= "Track #{i}" %>" type="application/x-mpegurl"/>
        <% i += 1 %>
    <%end %>
        Your browser does not support the audio tag.
</audio>
