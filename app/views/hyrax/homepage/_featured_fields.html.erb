<h3>
  <span class="sr-only">Title</span>
  <%= truncate(featured.title.first, length: 128, separator: ' ') %>
</h3>
<% if featured.human_readable_type.to_s.downcase.include?("course") && featured.creator.present? %>
  <div class="subtitle">
   <%= " Lectures by #{featured.creator.first}" %>
  </div>
<% end %>
<div>
  <%= featured.description.sort_by(&:length).reverse.join(" ").truncate(1500) %>
</div>
<div>
    <span class="sr-only">Date Created</span>
    <%= featured.date_created.first %>
</div>
